<div class="container">
  <p id="notice"><%= notice %></p>
  

<h1>America's Best National Parks</h1>
<button class="btn btn-lg btn-default">
  <%= link_to 'Create New Park', new_park_path %>
</button>

<table class="table col-md-12">
  <thead>
    <tr>
      <th class="col-md-4"><h4>Park</h4></th>
      <th class="col-md-5"><h4>Description</h4></th>
      <th class="col-md-2"><h4>Actions</h4></th>

    </tr>
  </thead>

  <tbody>
    <% @parks.each do |park| %>
      <tr>
        <td>
          <img src="<%= park.picture %>" height="200px" width="400px">
        </td>
        <td>
          <strong><%= park.name %></strong><br>
          <p><%= park.description %></p>
        </td>
        <td>
          <button type="button" class="btn btn-lg btn-block btn-default"><%= link_to 'Show', park %></button><br>
          <button type="button" class="btn btn-lg btn-block btn-default"><%= link_to 'Edit', edit_park_path(park) %></button><br>
          <button  type="button" class="btn btn-lg btn-block btn-default"><%= link_to 'Destroy', park, method: :delete, data: { confirm: 'Are you sure?' } %></button>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>
