<h1>America's Best National Park Rangers</h1>
<button class="btn btn-lg btn-default">
  <%= link_to 'Create New Ranger', new_ranger_path %>
</button>

<table class="table col-md-12">
  <thead>
    <tr>
      <th class="col-md-3"><h4>Ranger</h4></th>
      <th class="col-md-2"><h4>Parks</h4></th>
      <th class="col-md-1"><h4>Parks No</h4></th>
      <th class="col-md-2"><h4></h4></th>
      <th class="col-md-2"><h4></h4></th>
      <th class="col-md-2"><h4></h4></th>
    </tr>
  </thead>

  <tbody>
    <% @rangers.each do |ranger| %>
      <tr>

        <td>
          <strong><%= ranger.name %></strong><br>
        </td>


        <td>
          <% if ranger.parks.length > 0 %>
          <ul style="list-style-type:none; padding-left:0">
            <% ranger.parks.each do |park| %>
              <li><%= park.name %></li>
            <% end %>
          </ul>
          <% else %>
          <h5>UNEMPLOYED. USELESS.<h5>
          <% end %>
        </td>

        <td>

            <p><%= ranger.parks.length %></p>

          </td>

        <td>
          <button type="button" class="btn btn-block btn-default"><%= link_to 'Profile', ranger %></button>
        </td>

        <td>
          <button type="button" class="btn btn-block btn-default"><%= link_to 'Edit', edit_ranger_path(ranger) %></button>
        </td>
        <td>
          <button  type="button" class="btn btn-block btn-default"><%= link_to 'Destroy', ranger, method: :delete, data: { confirm: 'Are you sure?' } %></button>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
